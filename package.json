{
  "name": "mern_auth_template",
  "version": "1.0.0",
  "description": "A starter template for using JWT authentication with a MERN stack.",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start:server": "node dist/server/index.js",
    "dev:server": "concurrently \"npx tsc -w\" \"nodemon dist/server/index.js\"",
    "lint": "eslint . .ts",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test:server": "mocha server/tests/**/*.spec.ts",
    "test:server:unit": "mocha server/tests/unit/**/*.spec.ts",
    "test:server:integration": "mocha server/tests/integration/**/*.spec.ts"
  },
  "keywords": [
    "mern",
    "auth",
    "jwt",
    "authentication",
    "template"
  ],
  "author": "Stevan Freeborn",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "mongoose": "^7.5.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.6",
    "@types/express": "^4.17.18",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.7.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "@types/validator": "^13.11.2",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "chai": "^4.3.9",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
